{
  "name": "byteping-server",
  "version": "0.1.0",
  "description": "",
  "main": "server.ts",
  "scripts": {
    "start": "nodemon src/server.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "release": "release-it"
  },
  "author": "Arjunan K",
  "license": "ISC",
  "dependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@release-it/conventional-changelog": "^7.0.2",
    "@types/express": "^4.17.17",
    "express": "^4.18.2",
    "release-it": "^16.2.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "dotenv": "^16.3.1",
    "nodemon": "^3.0.1"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(github): release v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "style",
              "section": "Features"
            },
            {
              "type": "refactor",
              "section": "Features"
            },
            {
              "type": "docs",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            },
            {
              "type": "bug",
              "section": "Bug Fixes"
            },
            {
              "type": "test",
              "section": "Bug Fixes"
            }
          ]
        }
      }
    }
  }
}
